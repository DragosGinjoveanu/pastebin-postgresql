extends layout

block content
    .card
        .card-body.text-center
            h2 Pastes List
            button.btn.btn-secondary(type='button' onclick="location.href='http://localhost:3000'") Add another paste 
    ul
        each val in pastes
            .card
                .card-body
                    h3.card-title(style="color:#585858;")=val.name + '\'s paste' 
                    h5.card-text= val.content
                    -var editUrl = 'http://localhost:3000/pastes/' + val.id;
                    -var deleteUrl = 'http://localhost:3000/delete/' + val.id;
                    .card-footer
                        form(method="POST" action=deleteUrl)
                            a(class="btn btn-success" href=editUrl) Edit
                            button.btn.btn-danger(type='submit') Delete