extends layout

block content
    .card
        .card-body.text-center
            h2 Pastes List
            button.btn.btn-secondary(type='button' onclick="location.href='http://localhost:3000'") Add another paste 
    ul
        each val, index in authors
            .card
                .card-body
                    h3.card-title(style="color:#585858;")=val + '\'s paste' 
                    h5.card-text= descriptions[index]
                    -var editUrl = 'http://localhost:3000/paste/edit/' + index;
                    -var deleteUrl = 'http://localhost:3000/paste/delete/' + index;
                    .card-footer
                        a(class="btn btn-success" href=editUrl) Edit
                        a(class="btn btn-danger" href=deleteUrl) Delete