extends layout

block content
    .card
        .card-body.text-center
            h2 Pastes List
            button.btn.btn-secondary(type='button' onclick="location.href='http://localhost:3000'") Add another paste 
    ul
        each val, index in authors
            .card
                .card-body
                    h3.card-title(style="color:#585858;")=val + '\'s paste' 
                    h5.card-text= descriptions[index]
                    -var id= index + 1;
                    -var editUrl = 'http://localhost:3000/pastes/' + id;
                    -var deleteUrl = 'http://localhost:3000/delete/' + id;
                    .card-footer
                        a(class="btn btn-success" href=editUrl) Edit
                        form(method="POST" action=deleteUrl)
                            button.btn.btn-danger(type='submit') Delete